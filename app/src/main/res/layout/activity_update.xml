<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="297dp"
                app:srcCompat="@drawable/videoup" />

            <TextView
                android:id="@+id/narchivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#249CD3"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/descargar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descargar"
                android:background="@drawable/botones_verde"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="115dp"
                tools:layout_editor_absoluteY="134dp" />

            <Button
                android:id="@+id/instalar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instalar"
                android:background="@drawable/botones_azul"
                android:textColor="@android:color/background_light"
                android:visibility="invisible" />

            <Button
                android:id="@+id/explorar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostrar archivo"
                android:background="@drawable/botones_amarillo"
                android:textColor="@android:color/background_light"
                android:visibility="invisible" />
        </LinearLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>